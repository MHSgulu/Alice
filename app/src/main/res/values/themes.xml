<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基本应用程序主题. -->
    <style name="Theme.TodayNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- 在这里自定义主题. -->
    </style>

    <style name="Theme.CommonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- 在这里自定义主题. -->
        <item name="android:windowLightStatusBar">true</item> <!--系统状态的那些文字图标就会变成黑色-->
    </style>


    <!-- Base application theme. --><!--MainActivity活动范围内使用-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 在此处自定义主题-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 基本应用程序主题. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- 在这里自定义主题. -->
    </style>


    <!--item 注释区域-->
    <!--<item name="android:windowIsTranslucent">true</item>--> <!--指示这是否是半透明窗口的标志-->

    <!--SplashActivity -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item><!--指示此窗口是否应填充整个屏幕的标志-->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item><!--延伸显示区域到刘海屏区域 最低API28-->
    </style>

    <!--MainActivity活动范围之外的Activity使用-->
    <style name="CommonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
        <!--系统状态的那些文字图标就会变成黑色-->  <!--适合状态栏为接近白色系的时候--><!--API 23以上-->
        <!--如果设置，将绘制状态栏，使其与浅色状态栏背景兼容-->
        <!--要使其生效，窗口必须绘制系统栏背景，并且状态栏不能被要求为半透明的，与装饰视图上的设置相对应-->
        <!-- android.R.attr#windowDrawsSystemBarBackgrounds 绘制系统栏背景-->
        <!-- android.R.attr\#windowTranslucentStatus 半透明-->
        <!--android.view.View#SYSTEM_UI_FLAG_LIGHT_STATUS_BAR   decor view.-->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!--电影详情活动单独使用-->
    <style name="MovieDetailsActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
    </style>


    <!--影人详情活动单独使用-->
    <style name="FilmmakerDetailsActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black12_t5</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/ratingColor</item>
        <item name="android:windowTranslucentStatus">true</item><!--设置系统状态栏为半透明-->

    </style>



    <!--   控件区域      -->
    <style name="ToolbarTheme">
        <item name="android:elevation" tools:ignore="PrivateResource">@dimen/design_appbar_elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <!--<item name="titleTextColor">?attr/colorPrimaryDark</item>-->
        <item name="subtitleTextColor">@color/material_on_primary_emphasis_medium</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item><!--注意：只有当样式直接应用于工具栏时，此主题覆盖才起作用-->
    </style>


    <style name="CollapsingToolbarExpanded">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsingToolbarCollapsed">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorNavigationC</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!--字体区域-->
    <style name="customizeTabText" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">150dp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>