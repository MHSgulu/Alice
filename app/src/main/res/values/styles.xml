<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. --><!--MainActivity活动范围内使用-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 在此处自定义主题-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <!--SplashActivity -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--设置系统状态栏为半透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>



    <!--MainActivity活动范围之外的Activity使用-->
    <style name="CommonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
        <!--系统状态的那些文字图标就会变成黑色-->  <!--适合状态栏为接近白色系的时候--><!--API 23以上-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--电影详情活动单独使用-->
    <style name="MovieDetailsActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
    </style>



    <!--影人详情活动单独使用-->
    <style name="FilmmakerDetailsActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black12_t5</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/ratingColor</item>
        <!--设置系统状态栏为半透明-->
        <item name="android:windowTranslucentStatus">true</item>

    </style>


    <style name="ToolbarTheme">
        <item name="android:elevation" tools:ignore="PrivateResource">@dimen/design_appbar_elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <!--<item name="titleTextColor">?attr/colorPrimaryDark</item>-->
        <item name="subtitleTextColor">@color/material_on_primary_emphasis_medium</item>
        <!--注意：只有当样式直接应用于工具栏时，此主题覆盖才起作用-->
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>




    <style name="CollapsingToolbarExpanded">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsingToolbarCollapsed">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/white</item>
    </style>






    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
