<resources>

    <!-- Base application theme. --><!--MainActivity活动范围内使用-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 在此处自定义主题-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <!--SplashActivity -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--设置系统状态栏为半透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>



    <!--MainActivity活动范围之外的Activity使用-->
    <style name="CommonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
        <!--系统状态的那些文字图标就会变成黑色-->  <!--适合状态栏为接近白色系的时候--><!--API 23以上-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--电影详情活动单独使用-->
    <style name="MovieDetailsActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNavigationB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ratingColor</item>
    </style>




    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
