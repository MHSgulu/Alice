<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    tools:context=".ui.navigationB.movie.MovieCastAdapter">


    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/iv_cast_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:background="@color/colorNavigationC"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="start"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:maxLines="1"
        android:maxWidth="80dp"
        android:ellipsize="end"
        tools:text="演员名称"
        tools:background="@color/black12" />

    <TextView
        android:id="@+id/tv_cast_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="start"
        android:textColor="@color/white70"
        android:textSize="11sp"
        android:maxLines="1"
        android:maxWidth="80dp"
        android:ellipsize="end"
        tools:text="职位"
        tools:background="@color/black12"
        tools:ignore="SmallSp" />

</LinearLayout>