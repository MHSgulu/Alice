<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.navigationD.test.fragment.TestFragment1">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/icon_back_black"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="评分条(RatingBar)"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="默认样式（可交互）"/>

    <RatingBar
        android:id="@+id/ratingBar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="指示器样式样式"/>

    <RatingBar
        android:id="@+id/ratingBar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2"
        style="@android:style/Widget.Holo.RatingBar.Indicator"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="较小样式（作为指示器）"/>

    <RatingBar
        android:id="@+id/ratingBar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2"
        style="@android:style/Widget.Holo.RatingBar.Small"/>

</LinearLayout>